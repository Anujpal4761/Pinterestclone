<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="containerper">
      <div class="cardper">
          <div class="profile-picture">
              <img src="https://imgs.search.brave.com/QxmxpYo7-eiDMhDiNSjpArgGzoKO-y4Ugws0VNYXc3s/rs:fit:500:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzL2FkLzZi/L2JjL2FkNmJiYzUz/OTdmNWFmOWZlOTI5/MDhjNTI1MzNkYTJl/LmpwZw" alt="Profile Picture">
          </div>
          <% if (user) { %>
              <h2 class="name"><%= user.fullname %></h2>
              <h3 class="username"><%= user.username %></h3>
              <p class="tagline">1% better</p>
              <p class="description">VK_18</p>
              <a href="/logout" class="button">logout</a>
          <% } else { %>
              <p>User not found. Please <a href="/login">login</a>.</p>
          <% } %>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="text" name="filecaption" placeholder="some caption">
            <input type="file" name="file">
            <button type="submit">Upload</button>
          </form>
          
      </div>
  </div>
  
  
  <div class="container">
    <div class="cards flex">
      <% user.posts.forEach(function(post){ %>
        <div class="card" style="width: 18rem;">
          <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= post.postText %></h5>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
     
  </body>
</html>